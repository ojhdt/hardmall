<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.edu.scnu.user.mapper.NewUserMapper">
  <select id="checkUsername" parameterType="String" resultType="Integer">
    select count(user_name) from t_user where user_name=#{userName};
  </select>
  <insert id="userSave" parameterType="User" >
    insert into t_user(user_id,user_name,user_password,user_nickname,user_email)
    values(#{userId},#{userName},#{userPassword},#{userNickname},#{userEmail})
  </insert>
  <select id="queryUserByNameAndPassword" parameterType="User"
          resultType="User">
    select * from t_user where user_name=#{userName} and
      user_password=#{userPassword};
  </select>
</mapper>